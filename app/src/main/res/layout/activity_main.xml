<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Semáforos Fase 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="82dp"
        android:layout_height="254dp"
        android:layout_marginTop="84dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgRojo1"
            android:layout_width="67dp"
            android:layout_height="75dp"
            android:layout_marginLeft="7dp"
            app:srcCompat="@drawable/foco" />

        <ImageView
            android:id="@+id/imgAmarillo1"
            android:layout_width="67dp"
            android:layout_height="75dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/foco" />

        <ImageView
            android:id="@+id/imgVerde1"
            android:layout_width="67dp"
            android:layout_height="75dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/foco" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="82dp"
        android:layout_height="254dp"
        android:layout_marginTop="88dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgRojo2"
            android:layout_width="67dp"
            android:layout_height="75dp"
            android:layout_marginLeft="7dp"
            app:srcCompat="@drawable/foco" />

        <ImageView
            android:id="@+id/imgAmarillo2"
            android:layout_width="67dp"
            android:layout_height="75dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/foco" />

        <ImageView
            android:id="@+id/imgVerde2"
            android:layout_width="67dp"
            android:layout_height="75dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/foco" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnActivar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:text="Encender Semáforo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>